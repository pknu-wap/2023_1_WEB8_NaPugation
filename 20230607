<script>
  const button = document.querySelector(".button1");
  const dialog = document.querySelector(".button2");
  const button_info = document.querySelector(".button3");
  const dialog_info = document.querySelector(".button4");

  button.addEventListener("click", () => { 
    dialog.showModal()
  })
  button_info.addEventListener("click", () => {
    dialog_info.showModal()
  })
  var target = document.querySelectorAll('.btn_open');
  var btnPopClose = document.querySelectorAll('.pop_wrap .btn_close');
  var targetID;

  // 팝업 열기
  for(var i = 0; i < target.length; i++){
    target[i].addEventListener('click', function(){
      targetID = this.getAttribute('href');
      document.querySelector(targetID).style.display = 'block';
    });
  }

  // 팝업 닫기
  for(var j = 0; j < target.length; j++){
    btnPopClose[j].addEventListener('click', function(){
      this.parentNode.parentNode.style.display = 'none';
    });
  }
  /*function toggleBtn1() {
    const btn_slow = document.getElementById('btn_slow');
    if(btn_slow.style.display !== 'none') {
      btn_slow.style.display = 'none';
    }
    else {
      btn_slow.style.display = 'block';
    }
  }*/  /*그냥 버튼 누르는걸로 없애는 거 시도, 실패. 다음에 다시 시도*/
</script>
